generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum roleEnum {
  client
  agent
}

enum status {
  open
  in_progress
  closed
}

model User {
  id       String   @id @default(cuid())
  name     String
  email    String   @unique
  role     roleEnum
  createAt DateTime @default(now())

  tickets  Ticket[] // un user peut faire plusieurs tickets
  messages Message[] // un user peut envoyer plusieurs messages
}

model Ticket {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  title       String
  description String
  status      status   @default(open)
  createAt    DateTime @default(now())

  messages Message[] // un ticket peut avoir plusieurs messages
}

model Message {
  id       String @id @default(cuid())
  // clé étrangère vers User
  senderId String
  sender   User   @relation(fields: [senderId], references: [id])

  // clé étrangère vers Ticket
  ticketId String
  ticket   Ticket   @relation(fields: [ticketId], references: [id])
  content  String
  createAt DateTime @default(now())
}
